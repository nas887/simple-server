<%= render "shared/user_approvals" %>

<section class="table-compact" id="facility-groups">
  <div class="table-responsive">
    <section class="table-compact" id="facility-groups">
      <div class="table-responsive">
        <% @organizations.each do |organization| %>
          <table>
            <tr>
              <th><h2 style="padding-top: 1em;"><%= organization.name %></h2></th>
              <th class="row-label">Newly<br>enrolled</th>
              <th class="row-label">Return<br>patients</th>
            </tr>
            <% policy_scope(organization.facility_groups).order(:name).each do |facility_group| %>
              <tr>
                <td class="row-title"><%= link_to facility_group.name, [organization, facility_group] %></td>
                <td class="row-enrolled text-green">45</td>
                <td class="row-enrolled text-green">568</td>
              </tr>
            <% end %>
          </table>
        <% end %>
      </div>
    </section>
  </div>
</section>
