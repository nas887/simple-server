<h1>Edit Overdue Appointment</h1>

<%= form_tag(appointment_path, method: 'put') do %>
  Remind on:
  <%= date_field(:appointment, :remind_on, value: @appointment.remind_on) %>
  <br>
  Agreed to visit:
  <%= check_box(:appointment, :agreed_to_visit,
                {checked: @appointment.agreed_to_visit},
                checked_value: true, unchecked_value: false) %>
  <br>
  <%= submit_tag('Update') %>
<% end %>
