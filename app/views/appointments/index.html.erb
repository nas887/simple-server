<h1>Overdue Appointments</h1>

<% @appointments_per_facility.each do |facility, appointments| %>
<section>
  <h2><%= facility.name %></h2>
    <% appointments.each do |appointment| %>
      <div class="overdue-patient">
        <div class="overdue-time text-red">
          <%= appointment.days_overdue %> days overdue
        </div>
        <div class="overdue-title">
          <%= appointment.patient.full_name %>,
          <%= appointment.patient.gender %>,
          <%= appointment.patient.current_age %>
        </div>
        <div class="overdue-details">
          <p class="mb-0">
            Last BP:
            <%= appointment.patient.latest_blood_pressure.to_s %>,&nbsp;<%= time_ago_in_words(appointment.patient.latest_blood_pressure.device_created_at.to_date) %> ago
          </p>
          <p>
            Home:
            <%= appointment.patient.address.street_address %>,
            <%= appointment.patient.address.village_or_colony %>
          </p>
          <div class="row">
            <div class="col-md-6 col-lg-4">
              <% if phone_number = appointment.patient.phone_numbers.first&.number %>
                <p>
                  <%= link_to phone_number, "tel:#{phone_number}", class: "btn btn-info w-100" %>
                </p>
              <% end %>
            </div>
            <div class="col-md-6 col-lg-4">
              <%= bootstrap_form_with(model: @appointment ) do |form| %>
                <%= form.select :cancel_reason, Appointment.cancel_reasons.map { |key, value| [key.humanize, value] }, prompt: "Result of call...", hide_label: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </table>
</section>
<% end %>
